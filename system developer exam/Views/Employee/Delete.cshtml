@model Employee

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Employee</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" disabled class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" disabled class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MiddleName"></label>
            <input asp-for="MiddleName" disabled class="form-control" />
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DateHired"></label>
            <input asp-for="DateHired" disabled class="form-control" />
            <span asp-validation-for="DateHired" class="text-danger"></span>
        </div>
        

        <div class="text-center">
            <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
            <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
        </div>

    </div>
</form>