@model Branch

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit branch</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="BranchCode"></label>
            <input asp-for="BranchCode" class="form-control" />
            <span asp-validation-for="BranchCode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BranchName"></label>
            <input asp-for="BranchName" class="form-control" />
            <span asp-validation-for="BranchName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Barangay"></label>
            <input asp-for="Barangay" class="form-control" />
            <span asp-validation-for="Barangay" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PermitNumber"></label>
            <input asp-for="PermitNumber" class="form-control" />
            <span asp-validation-for="PermitNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BranchManager"></label>
            <input asp-for="BranchManager" class="form-control" />
            <span asp-validation-for="BranchManager" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DateOpened"></label>
            <input asp-for="DateOpened" class="form-control" />
            <span asp-validation-for="DateOpened" class="text-danger"></span>
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" asp-for="IsActive" name="IsActive" class="form-check-input" />
            <label for="IsActive">IsActive</label>
            <span class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
            <a asp-controller="Branches" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
        </div>

    </div>
</form>