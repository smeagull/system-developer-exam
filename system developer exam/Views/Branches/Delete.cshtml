@model Branch

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden></input>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add branch</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="BranchCode"></label>
            <input asp-for="BranchCode" disabled class="form-control" />
            
        </div>
        <div class="mb-3">
            <label asp-for="BranchName"></label>
            <input asp-for="BranchName" disabled class="form-control" />
            
        </div>
        <div class="mb-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" disabled class="form-control" />
           
        </div>
        <div class="mb-3">
            <label asp-for="Barangay"></label>
            <input asp-for="Barangay" disabled class="form-control" />
            
        </div>
        <div class="mb-3">
            <label asp-for="City"></label>
            <input asp-for="City" disabled class="form-control" />
            
        </div>
        <div class="mb-3">
            <label asp-for="PermitNumber"></label>
            <input asp-for="PermitNumber" disabled class="form-control" />
            
        </div>
        <div class="mb-3">
            <label asp-for="BranchManager"></label>
            <input asp-for="BranchManager" disabled class="form-control" />
           
        </div>
        <div class="mb-3">
            <label asp-for="DateOpened"></label>
            <input asp-for="DateOpened" disabled class="form-control" />
           
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" asp-for="IsActive" disabled name="IsActive" class="form-check-input" />
            <label for="IsActive">IsActive</label>
           
        </div>


        <div class="text-center">
            <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
            <a asp-controller="Branches" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
        </div>
        
    </div>
</form>